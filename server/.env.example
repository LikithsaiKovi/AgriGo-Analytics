# Email Configuration (SMTP)
# For Gmail: Use App Password (not your regular password)
# Enable 2-Factor Authentication and generate App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# MongoDB Connection
# Get free cluster from: https://www.mongodb.com/cloud/atlas
# Format: mongodb+srv://username:password@cluster.mongodb.net/database-name?retryWrites=true&w=majority
MONGO_URI=your-mongodb-connection-string

# OpenWeather API
# Get free API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=2170cf9f72b3eee31fdac25765223afd

# JWT Configuration
# Change this to a strong random string in production!
JWT_SECRET=your-super-secret-jwt-key-for-agroanalytics-2024

# Server Configuration
PORT=5000
NODE_ENV=development

# Client Origin (for CORS and WebSocket)
CLIENT_ORIGIN=http://localhost:3000
DATABASE_PATH=./app.db
